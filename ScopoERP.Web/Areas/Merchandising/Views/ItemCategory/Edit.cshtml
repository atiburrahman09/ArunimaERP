@model ScopoERP.MaterialManagement.ViewModel.ItemCategoryViewModel
@{
    ViewBag.Title = "Update ItemCategory";
}


<div class="row">
    <div class="col-md-12">
        <div class="card">
            @using (Html.BeginForm("Edit", "ItemCategory", FormMethod.Post, new { @class = "form-horizontal" }))
            {
                @Html.HiddenFor(model => model.ItemCategoryID)
                <div class="card-body">
                    <div class="form-group row">
                        <label class="col-md-4">Parent Category</label>
                        <div class="col-md-8">
                            @Html.DropDownListFor(model => model.ParentCategoryID, ViewBag.ParentCategory as SelectList, "", new { @class = "form-control" })
                            @Html.ValidationMessageFor(model => model.ParentCategoryID)
                        </div>
                    </div>

                    <div class="form-group row">
                        <label class="col-md-4">Category Name</label>
                        <div class="col-md-8">
                            @Html.TextBoxFor(model => model.Name, new { @class = "form-control" })
                            @Html.ValidationMessageFor(model => model.Name)
                        </div>
                    </div>
                </div>
                <div class="card-footer">
                    <div class="form-group row">
                        <div class="col-md-2">
                            @Html.ActionLink("Cancel", "Index", "ItemCategory", null, new { @class = "btn btn-block btn-dark waves-effect waves-light" })
                        </div>
                        <div class="col-md-2">
                            <button type="submit" class="btn btn-success btn-block waves-effect waves-light"> Save</button>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</div>