
@{
    ViewBag.Title = "Index";
}

<div class="row" ng-app="scopoApp" ng-controller="trainingCurveCtrl" ng-init="init()" ng-cloak>
    <div class="col-sm-3">
        <div class="card card-solid">
            <div class="card-body">
                <div class="form-group row">
                    <input type="text" placeholder="Search" class="form-control margin-bottom" ng-model="search" />
                </div>

                <ul class="list-group" style="height:741px;overflow:auto">
                    <li class="list-group-item" ng-repeat="curve in trainingCurveList | filter:search track by $index" ng-class="{active:spec.selected}">
                        <a href="#" ng-click="selectedTrainingCurve(curve)">
                        <i class="fa fa-shirtsinbulk" aria-hidden="true"> </i> {{ curve.Stage }} - {{curve.Curve}}                        
                        </a>
                    </li>
                </ul>
            </div>
        </div>


    </div>



    <div class="col-sm-9">
            <form name="trainingCurveForm" class="form-horizontal" ng-submit="saveTrainingCurve()" novalidate>
                <div class="card card-solid">
                    <div class="card-body">
                        <div class="form-group row">
                            <div class="col-md-4">
                                <label class="col-sm-12">Stage</label>
                                <div class="col-sm-12">
                                    <input type="number" class="form-control" ng-model="curve.Stage"
                                           placeholder="Stage" />
                                </div>
                            </div>
                            <div class="col-md-4">
                                <label class="col-sm-12">Curve</label>
                                <div class="col-sm-12">
                                    <input type="number" class="form-control" ng-model="curve.Curve"
                                           placeholder="Curve" />
                                </div>
                            </div>
                            <div class="col-md-4">
                                <label class="col-sm-12">Curve_1</label>
                                <div class="col-sm-12">
                                    <input type="number" class="form-control" ng-model="curve.Curve_1"
                                           placeholder="Curve_1" />
                                </div>
                            </div>
                        </div>
                        <div class="form-group row">
                            <div class="col-md-4">
                                <label class="col-sm-12">Curve_1A</label>
                                <div class="col-sm-12">
                                    <input type="number" class="form-control" ng-model="curve.Curve_1A"
                                           placeholder="Curve_1A" />
                                </div>
                            </div>
                            <div class="col-md-4">
                                <label class="col-sm-12">Curve_2</label>
                                <div class="col-sm-12">
                                    <input type="number" class="form-control" ng-model="curve.Curve_2"
                                           placeholder="Curve_2" />
                                </div>
                            </div>
                            <div class="col-md-4">
                                <label class="col-sm-12">Curve_3</label>
                                <div class="col-sm-12">
                                    <input type="number" class="form-control" ng-model="curve.Curve_3"
                                           placeholder="Curve_3" />
                                </div>
                            </div>
                        </div>
                        <div class="form-group row">
                            <div class="col-md-4">
                                <label class="col-sm-12">Curve_4</label>
                                <div class="col-sm-12">
                                    <input type="number" class="form-control" ng-model="curve.Curve_4"
                                           placeholder="Curve_4" />
                                </div>
                            </div>
                            <div class="col-md-4">
                                <label class="col-sm-12">Curve_5</label>
                                <div class="col-sm-12">
                                    <input type="number" class="form-control" ng-model="curve.Curve_5"
                                           placeholder="Curve_5" />
                                </div>
                            </div>
                            <div class="col-md-4">
                                <label class="col-sm-12">Curve_6</label>
                                <div class="col-sm-12">
                                    <input type="number" class="form-control" ng-model="curve.Curve_6"
                                           placeholder="Curve_6" />
                                </div>
                            </div>
                        </div>
                        <div class="form-group row">
                            <div class="col-md-4">
                                <label class="col-sm-12">Curve_New</label>
                                <div class="col-sm-12">
                                    <input type="number" class="form-control" ng-model="curve.Curve_New"
                                           placeholder="Curve_New" />
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="card-footer">
                        <div class="pull-right">
                            <button type="button" class="btn btn-danger btn-sm btn-flat bg-orange" ng-click="resetForm()"><i class="fa fa-close "></i>Reset</button>
                            <button class="btn btn-success btn-sm btn-flat bg-green" type="submit"><i class="fa fa-floppy-o"> </i> Save</button>
                        </div>
                    </div>
                </div>
            </form>
    </div>
</div>

