@model ScopoERP.Production.ViewModel.MachineCategoryViewModel
@{
    ViewBag.Title = "Create MachineCategory";
}

<div class="row">
    <div class="col-md-12">
        <div class="card card-solid">
            <div class="card-body">
                <div class="col-md-12">
                    @using (Html.BeginForm("Create", "MachineCategory", FormMethod.Post, new { @class = "form-horizontal" }))
                    {
                        @Html.ValidationSummary(true)

                        <div class="form-group row">
                            <label class="col-lg-4">Parent Category</label>
                            <div class="col-lg-8">
                                @Html.DropDownListFor(model => model.ParentCategoryID, ViewBag.ParentCategory as SelectList, "", new { @class = "form-control" })
                                @Html.ValidationMessageFor(model => model.Name)
                            </div>
                        </div>
                        <div class="form-group row">
                            <label class="col-lg-4">Category Name</label>
                            <div class="col-lg-8">
                                @Html.TextBoxFor(model => model.Name, new { @class = "form-control" })
                                @Html.ValidationMessageFor(model => model.Name)
                            </div>
                        </div>

                        <div class="form-group row pull-right">
                            <div class="col">
                                @Html.ActionLink("Cancel", "Index", "MachineCategory", null, new { @class = "btn btn-block btn-danger" })
                            </div>
                            <div class="col">
                                <input type="submit" class="btn btn-block btn-primary" value="Save" />
                            </div>
                        </div>
                    }

                </div>

            </div>
        </div>
    </div>
</div>