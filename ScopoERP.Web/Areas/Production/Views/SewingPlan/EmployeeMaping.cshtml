
@{
    ViewBag.Title = "EmployeeMaping";
}


<div class="row" ng-app="scopoApp" ng-controller="poEmployeeMappingCtrl" ng-init="init(@ViewBag.ProductionPlanningID)" ng-cloak>
   
    <div class="col-md-12">
        <div class="card card-solid">
            <form name="backToBackLCForm" class="form-horizontal" ng-submit="save()" novalidate>
                <div class="card-body">
                    <div class="form-group row">
                        <label class="control-label col-md-3">Style</label>
                        <div class="col-md-3">
                            <input class="form-control" type="text" ng-model="po.StyleNo" disabled />
                        </div>
                        <label class="col-md-3">Purchase Order</label>
                        <div class="col-md-3">
                            <input  class="form-control" type="text" ng-model="po.PoNo"
                                   disabled />
                        </div>
                    </div>
                    <div class="form-group row">
                        <label class="col-md-3">Floor Line</label>
                        <div class="col-md-3">
                            <input  class="form-control" type="text" ng-model="po.FloorName"
                                   disabled />
                        </div>

                        <label class="col-md-3">Quantity</label>
                        <div class="col-md-3">
                            <input class="form-control" type="number" ng-model="po.Quantity" disabled />
                        </div>
                    </div>

                    <div class="form-group row">
                        <label class="col-md-3">Capacity</label>
                        <div class="col-md-3">
                            <input class="form-control" type="text" ng-model="po.Capacity" disabled />
                        </div>
                    </div>

                    <div class="form-group row">
                        <label class="control-label col-md-3">Employees</label>
                        <div class="col-md-3">
                            <select class="form-control select2" ng-model="selectedEmployee">
                                <option ng-repeat="e in employeeList" value="{{e}}">{{e.Text}}-{{e.ValueString}}</option>
                            </select>
                        </div>
                        <div class="col-md-2">
                            <button id="addEmployeeRow" type="button" class="btn btn-success waves-effect waves-light" ng-click="mapEmployeewithPO()">
                                <span class="fa fa-plus"></span>
                            </button>
                        </div>
                    </div>

                    <div class="form-group row">
                        <div class="col-md-12 table-responsive">
                            <table class="table table-bordered table-striped" id="table">
                                <thead>
                                    <tr>
                                        <th>Employee Name</th>
                                        <th>Card No</th>
                                        <th></th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <tr ng-repeat="emp in po.empList| filter:searchEmp">
                                        <td>
                                            {{emp.ValueString}}
                                        </td>
                                        <td>
                                            {{emp.Text}}
                                        </td>
                                        <td>
                                            <button type="button" class="btn btn-danger waves-effect waves-light" ng-click="deleteEmpClicked($index)">
                                                <span class="fa fa-trash"></span>
                                            </button>
                                        </td>
                                    </tr>
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
                <div class="card-footer">
                    <div class="form-group row">
                        <div class="col-md-2">
                            <button type="submit" class="btn btn-success btn-block"> Save</button>
                        </div>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>

