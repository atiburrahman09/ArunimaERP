@model IEnumerable<ScopoERP.ProductionStatus.ViewModel.ProductionPlanViewModel>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_NewLayout.cshtml";
}


<div class="card">    
    <div class="card-body">
        <div class="row">

            <div class="col-sm-2">
                <h3 class="card-title">Swing Plan</h3>
            </div>
            <div class="col"></div>
            <div class="col-sm-2">
                @Html.ActionLink("Create New", "Create", null, new { @class = "btn btn-primary pull-right" })
            </div>
        </div>
        <table class="table table-striped table-bordered">
            <tr>
                <th>
                    Floor
                </th>
                <th>
                    PoNo
                </th>
                <th>
                    Quantity
                </th>
                <th>
                    Capacity
                </th>
                <th>
                    Start Date
                </th>
                <th>
                    End Date
                </th>
                <th></th>
            </tr>

            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.FloorName)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.PurchaseOrderNo)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Quantity)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Capacity)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.start)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.end)
                    </td>
                    <td>
                        @Html.ActionLink(" ", "Edit", new { id = item.ProductionPlanningID }, new { @class = "fa fa-edit " }) |                        
                        @Html.ActionLink(" ", "Delete", new { id = item.ProductionPlanningID }, new { @class = "fa fa-trash text-red" }) |
                        @Html.ActionLink(" ", "EmployeeMaping", new { id = item.ProductionPlanningID }, new { @class = "fa fa-map text-green" })
                    </td>
                </tr>
            }

        </table>

    </div>
</div>