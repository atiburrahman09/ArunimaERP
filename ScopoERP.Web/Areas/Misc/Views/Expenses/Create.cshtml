@model ScopoERP.Accounts.ViewModel.ExpenseViewModel

@{
    ViewBag.Title = "Create Expense";
}

<div class="row">
    <div class="col-md-12">
        <div class="card">
            @using (Html.BeginForm("Create", "Expenses", FormMethod.Post, new { @class = "form-horizontal" }))
            {
            <div class="card-body">
                <div class="form-group row">
                    <label class="col-md-4">Expense Date</label>
                    <div class="col-md-8">
                        @Html.TextBoxFor(model => model.ExpenseDate, new { @class = "form-control datepicker" })
                        @Html.ValidationMessageFor(model => model.ExpenseDate)
                    </div>
                </div>

                <div class="form-group row">
                    <label class="col-md-4">Account No</label>
                    <div class="col-md-8">
                        @Html.DropDownListFor(model => model.ChartOfAccountID, ViewBag.accounts as SelectList, "", new { @class = "form-control select2" })
                        @Html.ValidationMessageFor(model => model.AccountNo)
                    </div>
                </div>

                <div class="form-group row">
                    <label class="col-md-4">Expense Amount</label>
                    <div class="col-md-8">
                        @Html.TextBoxFor(model => model.ExpenseAmount, new { @class = "form-control" })
                        @Html.ValidationMessageFor(model => model.ExpenseAmount)
                    </div>
                </div>

                <div class="form-group row">
                    <label class="col-md-4">Expense By</label>
                    <div class="col-md-8">
                        @Html.TextBoxFor(model => model.ExpenseBy, new { @class = "form-control" })
                        @Html.ValidationMessageFor(model => model.ExpenseBy)
                    </div>
                </div>
                <div class="form-group row">
                    <label class="col-md-4">Description</label>
                    <div class="col-md-8">
                        @Html.TextBoxFor(model => model.Description, new { @class = "form-control" })
                        @Html.ValidationMessageFor(model => model.Description)
                    </div>
                </div>
            </div>
                <div class="card-footer">
                    <div class="form-group row">
                        <div class="col-md-2">
                            @Html.ActionLink("Cancel", "Index", "Expenses", null, new { @class = "btn btn-block btn-dark waves-effect waves-light" })
                        </div>
                        <div class="col-md-2">
                            <button type="submit" class="btn btn-success btn-block waves-effect waves-light"> Save</button>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</div>
