@model IEnumerable<ScopoERP.Accounts.ViewModel.PurchaseRequisitionViewModel>
@{
    ViewBag.Title = "Purchase Requisition";
}

<div class="row">
    <div class="col-md-12">
        <div class="card">
            <div class="card-body">
                <div class="form-group row">
                    <div class="col-md-2">
                        @Html.ActionLink("Add Purchase Requisition", "Create", "PurchaseRequisition", null, new { @class = "btn btn-flat btn-primary" })
                    </div>
                </div>

                <div class="form-group">
                    <table class="table table-bordered table-striped">
                        <thead>
                            <tr>
                                <th class="text-center"></th>
                                <th class="text-center">Requisition No</th>
                                <th class="text-center">Requisition Date</th>
                                <th class="text-center">Sector</th>
                                <th class="text-center">Requisition Amount</th>
                                <th class="text-center">InstallmentAmount</th>
                                <th class="text-center">Installment Date</th>
                                <th class="text-center">PayableAmount</th>
                                <th class="text-center">PayableDate</th>
                                
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>
                                        <a href="/Misc/PurchaseRequisition/Create/@item.PurchaseRequisitionID" class="btn btn-primary waves-effect waves-light">
                                            <i class="fa fa-pencil"></i>
                                        </a>
                                    </td>
                                    <td>@item.RequisitionNo</td>
                                    <td>@item.RequisitionDate.ToString("dd-MMM-yyyy")</td>
                                    <td>@item.Sector</td>
                                    <td>@item.RequisitionAmount.Value.ToString("0.00")</td>
                                    <td>@item.InstallmentAmount</td>
                                    @if (@item.InstallmentDate == null)
                                    {
                                        <td>@item.InstallmentDate</td>
                                    }
                                    else
                                    {
                                        <td>@item.InstallmentDate.Value.ToString("dd-MMM-yyyy")</td>
                                    }
                                    <td>@item.PayableAmount</td>
                                    @if (@item.PayableDate == null)
                                    {
                                        <td>@item.PayableDate</td>
                                    }

                                    else
                                    {
                                        <td>@item.PayableDate.Value.ToString("dd-MMM-yyyy")</td>
                                    }

                                   
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>

        </div>
    </div>
</div>
