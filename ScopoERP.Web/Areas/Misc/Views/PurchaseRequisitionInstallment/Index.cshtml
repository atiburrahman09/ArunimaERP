@model IEnumerable<ScopoERP.Accounts.ViewModel.PurchaseRequisitionInstallmentViewModel>

@{
    ViewBag.Title = "Purchase Requisition Installment";
}

<div class="row">
    <div class="col-md-12">
        <div class="card">
            <div class="card-body">
                <div class="form-group row">
                    <div class="col-md-3">
                        @Html.ActionLink("Create New Installment", "Create", "PurchaseRequisitionInstallment", null, new { @class = "btn btn-success btn-block waves-effect waves-light" })
                    </div>
                </div>
                <table class="table table-bordered table-striped">
                    <thead>
                        <tr>
                            <th class="text-center"></th>
                            <th class="text-center">RequisitionNo</th>
                            <th class="text-center">Amount</th>
                            <th class="text-center">InstallmentDate</th>
                            <th class="text-center">PayableAmount</th>
                            <th class="text-center">PayableDate</th>
                            
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>
                                    <a href="/Misc/PurchaseRequisitionInstallment/Edit/@item.PurchaseRequisitionInstallmentID" class="btn btn-primary waves-effect waves-light">
                                        <i class="fa fa-pencil"></i>
                                    </a>
                                </td>
                                <td>@item.RequisitionNo</td>
                                <td>@item.Amount</td>
                                <td>@item.InstallmentDate.ToString("dd/MMM/yyyy")</td>   
                                <td>@item.PayableAmount</td>
                                @if (@item.PayableDate == null)
                                {
                                    <td>@item.PayableDate</td>
                                }
                                else
                                {
                                    <td>@item.PayableDate.Value.ToString("dd/MMM/yyyy")</td>
                                }
                                
                               
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
