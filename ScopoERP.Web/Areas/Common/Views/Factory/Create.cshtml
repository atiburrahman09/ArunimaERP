@model ScopoERP.Common.ViewModel.FactoryViewModel

@{
    ViewBag.Title = "Create Factory";
}

<div class="col-sm-offset-3 col-sm-6">
    <section class="panel">
        <header class="panel-heading">
            Create New Factory
        </header>
        <div class="panel-body">

            @using (Html.BeginForm("Create", "Factory", FormMethod.Post, new { @class = "form-horizontal" }))
            {
                @Html.ValidationSummary(true)

                <div class="form-group">
                    <label class="col-lg-4 col-sm-4 control-label">Factory Name</label>
                    <div class="col-lg-8">
                        @Html.TextBoxFor(model => model.FactoryName, new { @class = "form-control" })
                        @Html.ValidationMessageFor(model => model.FactoryName)
                    </div>
                </div>

                <div class="form-group">
                    <div class="col-lg-offset-4 col-lg-4">
                        @Html.ActionLink("Cancel", "Index", "Factory", null, new { @class = "btn btn-block btn-default" })
                    </div>
                    <div class="col-lg-4">
                        <input type="submit" class="btn btn-block btn-primary" value="Save" />
                    </div>
                </div>
            }

        </div>
    </section>
</div>
