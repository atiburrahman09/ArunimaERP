@model ScopoERP.Store.ViewModel.ChalanViewModel
@{
    ViewBag.Title = "Create Export Chalan";
}

<script src="~/Areas/Store/Scripts/controllers/chalan.js"></script>

<div class="row">
    <div class="col-md-12">
        <div class="card">
            @using (Html.BeginForm("Create", "Chalan", FormMethod.Post, new { @class = "form-horizontal" }))
            {
                @Html.ValidationSummary(true)
                @Html.Raw(ViewBag.saveError)

                <div class="card-body">
                    <div class="form-group row">
                        <label class="col-sm-3">Chalan No</label>
                        <div class="col-sm-3">
                            @Html.TextBoxFor(model => model.ChalanNo, new { @class = "form-control" })
                            @Html.ValidationMessageFor(model => model.ChalanNo)
                        </div>

                        <label class="col-sm-3">Chalan Date</label>
                        <div class="col-sm-3">
                            @Html.TextBoxFor(model => model.ChalanDate, new { @class = "form-control datepicker" })
                            @Html.ValidationMessageFor(model => model.ChalanDate)
                        </div>
                    </div>

                    <div class="form-group row">
                        <label class="col-sm-3">Vehicle No</label>
                        <div class="col-sm-3">
                            @Html.TextBoxFor(model => model.VehicleNo, new { @class = "form-control" })
                            @Html.ValidationMessageFor(model => model.VehicleNo)
                        </div>

                        <label class="col-sm-3">Driver Name</label>
                        <div class="col-sm-3">
                            @Html.TextBoxFor(model => model.DriverName, new { @class = "form-control" })
                            @Html.ValidationMessageFor(model => model.DriverName)
                        </div>
                    </div>

                    <div class="form-group row">
                        <label class="col-sm-3">Mobile No</label>
                        <div class="col-sm-3">
                            @Html.TextBoxFor(model => model.MobileNo, new { @class = "form-control" })
                            @Html.ValidationMessageFor(model => model.MobileNo)
                        </div>

                        <label class="col-sm-3">Shipped By</label>
                        <div class="col-sm-3">
                            @Html.TextBoxFor(model => model.ShippedBy, new { @class = "form-control" })
                            @Html.ValidationMessageFor(model => model.ShippedBy)
                        </div>
                    </div>

                    <div class="form-group row">
                        <label class="col-sm-3">Seal No</label>
                        <div class="col-sm-3">
                            @Html.TextBoxFor(model => model.SealNo, new { @class = "form-control" })
                            @Html.ValidationMessageFor(model => model.SealNo)
                        </div>
                    </div>
                </div>
                
                <div class="card-body">
                    <div style="margin-top: 10px;">
                        <div class="form-group row">
                            <label class="col-md-3">Style No</label>
                            <div class="col-md-3">
                                @Html.DropDownList("StyleID", ViewBag.Style as SelectList, "", new { @class = "form-control select2" })
                            </div>

                            <label class="col-md-3">PO No</label>
                            <div class="col-md-2">
                                @Html.DropDownList("PurchaseOrderID", Enumerable.Empty<SelectListItem>(), "", new { @class = "form-control select2" })
                            </div>

                            <div class="col-md-1">
                                <button type="button" class="btn btn-success btn-block btn-add btn-sm">Add</button>
                            </div>
                        </div>
                    </div>
                </div>
                <hr />
                <div class="card-body">
                    <div class="table-responsive">
                        <table class="table table-bordered no-wrap" id="shipment-table">
                            <thead>
                                <tr>
                                    <th>PO No</th>
                                    <th>Order Quantity</th>
                                    <th>Chalan Quantity</th>
                                    <th>CBM</th>
                                    <th>Cartoon Quantity</th>
                                    <th>Factory</th>
                                    <th></th>
                                </tr>
                            </thead>
                            <tbody></tbody>
                        </table>
                    </div>
                </div>
                <div class="card-footer">
                    <button type="submit" class="btn btn-success pull-right"><i class="fa fa-save "></i> Save</button>
                    <div class="clearfix"></div>
                </div>
            }
        </div>
    </div>
</div>