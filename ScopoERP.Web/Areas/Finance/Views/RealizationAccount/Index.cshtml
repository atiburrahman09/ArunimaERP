@model IEnumerable<ScopoERP.Finance.ViewModel.RealizationAccountViewModel>
@{
    ViewBag.Title = "Realization Account";
}

<div class="row">
    <div class="col-md-12">
        <div class="card">
            <div class="card-body">
                <div class="form-group row">
                    <div class="col-md-8">
                        <input type="text" class="form-control" name="SearchAccount" />
                    </div>
                    <div class="col-md-2">
                        <button type="submit" class="btn btn-success btn-block waves-effect waves-light">Search</button>
                    </div>
                    <div class="col-md-2">
                        @Html.ActionLink("Add New Account", "Create", "RealizationAccount", null, new { @class = "btn btn-success btn-block waves-effect waves-light" })
                    </div>
                </div>

                <div class="form-group">
                    <table class="table table-bordered table-striped table-hover">
                        <thead>
                            <tr>
                                <th>Realization Account No</th>
                                <th>Realization Account Name</th>
                                <th></th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>@item.RealizationAccountNo</td>
                                    <td>@item.RealizationAccountName</td>
                                    <td>
                                        <a href="/Finance/RealizationAccount/Edit/@item.RealizationAccountID" class="btn btn-info waves-effect waves-light">
                                            <i class="fa fa-pencil"></i>
                                        </a>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>
