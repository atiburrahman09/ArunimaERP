@model IEnumerable<ScopoERP.LC.ViewModel.JobViewModel>
@{
    ViewBag.Title = "Job";
}

<div class="row">
    <div class="col-md-12">
        <div class="card">
            <div class="card-body">
                <div class="form-group row">
                    <div class="col-md-2">
                        @Html.ActionLink("Add New Job", "Create", "Job", null, new { @class = "btn btn-success btn-block waves-effect waves-light" })
                    </div>
                </div>

                <div class="form-group">
                    <table class="table table-bordered table-striped">
                        <thead>
                            <tr>
                                <th>Job No</th>
                                <th>Contract No</th>
                                <th>Contract Date</th>
                                <th>Bank Name</th>
                                <th>Shipped To</th>
                                <th>Notify Party</th>
                                <th>Also Notify Party</th>
                                <th>CAT NO</th>
                                <th></th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach(var item in Model)
                            {
                            <tr>
                                <td>@item.JobNo</td>
                                <td>@item.ContractNo</td>
                                <td>@item.ContractDate</td>
                                <td>@item.BankName</td>
                                <td>@item.ShippedTo</td>
                                <td>@item.NotifyParty</td>
                                <td>@item.AlsoNotifyParty</td>
                                <td>@item.CATNO</td>
                                <td>
                                    <a class="btn btn-primary waves-effect waves-light" href="/Commercial/Job/Edit/@item.JobId">
                                        <i class="fa fa-pencil"></i>
                                    </a>
                                </td>
                            </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>