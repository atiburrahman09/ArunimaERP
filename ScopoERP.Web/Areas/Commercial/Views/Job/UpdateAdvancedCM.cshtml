@model List<ScopoERP.Finance.ViewModel.RealizationViewModel>

@{
    ViewBag.Title = "Index";
}

<div class="col-sm-12" ng-app="job" ng-controller="jobCtrl" ng-init="init()">
    <toaster-container toaster-options="{ 'close-button':true}"></toaster-container>
    <section class="panel">
        <header class="panel-heading">
            Update Accessories and Others
        </header>
        <div class="panel-body">
            <form class="form-horizontal">
                <div class="form-group">
                    <label class="col-lg-2 col-sm-2 control-label left-label">Year</label>
                    <div class="col-lg-3">
                        <select class="combo-box" ng-model="Year" ng-change="getAllJob()">
                            <option>Select a Year</option>
                            <option value="2014">2014</option>
                            <option value="2015">2015</option>
                            <option value="2016">2016</option>
                            <option value="2017">2017</option>
                        </select>
                    </div>
                </div>

                <hr />

                <div class="form-group">
                    <div class="table-responsive">
                        <table class="table table-bordered table-striped table-hover">
                            <thead>
                                <tr>
                                    <th class="col-md-1">SL</th>
                                    <th class="col-md-3">Job No</th>
                                    <th class="col-md-2">Budget</th>
                                    <th class="col-md-2">Limit</th>
                                    <th class="col-md-2">Extra</th>
                                    <th class="col-md-2">Sight Days</th>
                                </tr>
                            </thead>
                            <tbody>
                                <tr ng-repeat="item in jobList">
                                    <td><center>{{$index + 1}}</center></td>
                                    <td>{{item.JobNo}}</td>
                                    <td>
                                        <input type="hidden" ng-model="item.JobID"/>
                                        {{item.BudgetPercentage}}
                                    </td>
                                    <td><input type="text" ng-model="item.Limit" class="form-control" value="{{item.Limit}}" ng-change="calculatePercentage($index)" /></td>
                                    <td><input type="text" ng-model="item.AdvancedCMPercentage" value="{{item.AdvancedCMPercentage}}" class="form-control" readonly /></td>
                                    <td><input type="text" ng-model="item.SightDays" class="form-control" /></td>
                                </tr>
                            </tbody>
                        </table>
                    </div>
                </div>

                <hr />

                <div class="form-group">
                    <div class="col-lg-offset-8 col-lg-2">
                        <input type="reset" class="btn btn-block btn-default" value="Reset" />
                    </div>
                    <div class="col-lg-2">
                        <input type="submit" class="btn btn-block btn-primary" ng-click="updateAdvancedCM()" value="Save" />
                    </div>
                </div>

            </form>
        </div>
    </section>
</div>

@Html.Partial("_angular")

<script src="~/Areas/LC/Scripts/services/jobService.js"></script>
<script src="~/Scripts/app/main.js"></script>
<script src="~/Areas/LC/Scripts/controllers/jobCtrl.js"></script>
<script src="~/Areas/LC/Scripts/app.js"></script>