@model IEnumerable<ScopoERP.LC.ViewModel.BankViewModel>
@{
    ViewBag.Title = "Bank";
}

<div class="row">
    <div class="col-md-12">
        <div class="card">
            <div class="card-body">
                <div class="form-group row">
                    <div class="col-md-2">
                        @Html.ActionLink("Add New Bank", "Create", "Bank", null, new { @class = "btn btn-success btn-block waves-effect waves-light" })
                    </div>
                </div>

                <div class="form-group">
                    <table class="table table-bordered table-striped">
                        <thead>
                            <tr>
                                <th>Name</th>
                                <th>Address</th>
                                <th></th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>@item.BankName</td>
                                    <td>@item.BankAddress</td>
                                    <td>
                                        <a href="/Commercial/Bank/Edit/@item.BankID" class="btn btn-primary waves-effect waves-light">
                                            <i class="fa fa-pencil"></i>
                                        </a>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>