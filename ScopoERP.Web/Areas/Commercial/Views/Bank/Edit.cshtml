@model ScopoERP.LC.ViewModel.BankViewModel

@{
    ViewBag.Title = "Update Bank";
}

<div class="row">
    <div class="col-md-12">
        <div class="card">
            @using (Html.BeginForm("Edit", "Bank", FormMethod.Post, new { @class = "form-horizontal" }))
            {
                <header class="card-header with-border">
                    <h3 class="card-title">Create New Job</h3>
                </header>
                <div class="card-body">
                    @Html.HiddenFor(model => model.BankID)

                    <div class="form-group row">
                        <label class="col-md-4">Job No</label>
                        <div class="col-md-8">
                            @Html.TextBoxFor(model => model.BankName, new { @class = "form-control" })
                            @Html.ValidationMessageFor(model => model.BankName)
                        </div>
                    </div>

                    <div class="form-group row">
                        <label class="col-md-4">Contract No</label>
                        <div class="col-md-8">
                            @Html.TextAreaFor(model => model.BankAddress, new { @class = "form-control" })
                            @Html.ValidationMessageFor(model => model.BankAddress)
                        </div>
                    </div>
                </div>
                <div class="card-footer">
                    <div class="form-group row">
                        <div class="col-md-2">
                            @Html.ActionLink("Cancel", "Index", "Job", null, new { @class = "btn btn-block btn-dark waves-effect waves-light" })
                        </div>
                        <div class="col-md-2">
                            <button type="submit" class="btn btn-success btn-block waves-effect waves-light"> Save</button>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</div>