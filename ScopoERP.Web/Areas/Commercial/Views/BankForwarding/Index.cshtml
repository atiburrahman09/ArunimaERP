@{
    ViewBag.Title = "Bank Forwarding";
}

<div class="row" ng-app="scopoApp" ng-controller="bankForwardingCtrl" ng-init="init()" ng-cloak>
    <div class="col-sm-12">
        <div class="card">            
            <div class="card-body">
                <div class="row">
                    <div class="col-md-5">
                        <select class="form-control select2" ng-model="selectedJob" ng-change="onJobChange(selectedJob)">
                            <option value="">Select Job</option>
                            <option ng-repeat="job in jobList" value="{{job.Value}}">{{job.Text}}</option>
                        </select>
                    </div>

                    <div class="col-md-5">
                        <select class="form-control select2" ng-model="selectedBF" ng-change="selectBankFW(selectedBF)">
                            <option value="">Select Bank Forwarding</option>
                            <option ng-repeat="bf in allBankFW" value="{{bf}}">{{bf.BankForwardingNo}}</option>
                        </select>
                    </div>

                    <div class="col-md-2">
                        <button class="btn btn-success btn-block waves-effect waves-light" ng-click="resetForm()">Create New</button>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="col-sm-12">
        <form class="form-horizontal" name="bankForwardingForm" ng-submit="saveBankForwarding(bankFW)" novalidate>
            <div class="card">
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-7">
                            <div class="form-group row">
                                <label class="col-sm-4 control-label">Bank Forwarding No</label>
                                <div class="col-sm-8">
                                    <input class="form-control" ng-model="bankFW.BankForwardingNo" readonly />
                                </div>
                            </div>

                            <div class="form-group row">
                                <label class="col-sm-4 control-label">Bank Forwarding Date</label>
                                <div class="col-sm-8">
                                    <input class="form-control datepicker" ng-model="bankFW.BankForwardingDate" required />
                                </div>
                            </div>
                            
                            <div class="form-group row">
                                <label class="col-sm-4 control-label">FDBP No</label>
                                <div class="col-sm-8">
                                    <input class="form-control" ng-model="bankFW.FDBPNo" />
                                </div>
                            </div>
                            <div class="form-group row">
                                <label class="col-sm-4 control-label">Courier No</label>
                                <div class="col-sm-8">
                                    <input class="form-control" ng-model="bankFW.Courier" />
                                </div>
                            </div>
                        </div>

                        <div class="col-md-5">
                            <div class="form-group row">
                                <div class="col-sm-10">
                                    <select class="form-control select2" ng-model="selectedInvoice"
                                            ng-options="i as i.InvoiceNo for i in invoiceList">
                                        <option value="">Select Invoice</option>
                                    </select>

                                </div>
                                <div class="col-sm-2">
                                    <button type="button" class="btn btn-success waves-effect waves-light" ng-click="addToGrid(selectedInvoice)">
                                        <i class="fa fa-plus-circle"></i>
                                    </button>

                                </div>
                            </div>

                            <div class="table-responsive" style="max-height:30vh;overflow:auto;">
                                <table class="table table-bordered table-striped">
                                    <thead>
                                        <tr>
                                            <th>
                                                Invoice No
                                            </th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        <tr ng-repeat="invoice in bankFW.InvoiceList">
                                            <td>
                                                <button type="button" class="btn" ng-click="removeFromGrid($index)">
                                                    <i class="fa fa-trash"></i>
                                                </button>
                                                {{invoice.InvoiceNo}}
                                            </td>
                                        </tr>
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="card-footer">
                    <div class="pull-right">
                        <button class="btn btn-dark" type="button" ng-click="resetForm()"><i class="fa fa-close "></i> Reset</button>
                        <button class="btn btn-success" type="submit"><i class="fa fa-save "></i> Save Changes</button>
                    </div>
                </div>
            </div>
        </form>
    </div>
</div>

