@model IEnumerable<ScopoERP.Reports.ViewModel.ShipmentDetailsReportViewModel>

@{
    ViewBag.Title = "ShipmentDetails";
}

<div class="row">
    <div class="col-sm-12">
        <div class="card">
            <div class="card-header no-border">
                <h3> Shipment Details (WIP)</h3>
            </div>
            <div class="card-body">
                @using (Html.BeginForm("ShipmentDetails", "Report", FormMethod.Post, new { @class = "form-horizontal" }))
            {
                    @Html.ValidationSummary(true)
                    
                    <div class="form-group row">
                        <label class="col-lg-3">From Date</label>
                        <div class="col-lg-3">
                            @Html.TextBox("FromDate", null, new { @class = "form-control datepicker", autocomplete = "off", required = "required" })
                        </div>
                    
                        <label class="col-lg-3">To Date</label>
                        <div class="col-lg-3">
                            @Html.TextBox("ToDate", null, new { @class = "form-control datepicker", autocomplete = "off", required = "required" })
                        </div>
                    </div>

                    <div class="form-group row">
                        <div class="col-lg-9"></div>
                        <div class="col-lg-3">
                            <input type="submit" class="btn btn-block btn-primary details" value="Search" />
                        </div>
                    </div>
                }

            </div>
        </div>

        <div class="card">
            <div class="card-body">
                <div class="form-group row">
                    <div class="col-md-2 pull-right">
                        <button type="button" class="btn btn-primary btn-block waves-effect waves-light pull-right download">Excel Download</button>
                    </div>
                </div>
                <div class="form-group row">
                    <table class="table table-bordered table-striped" style="display:inline-block;overflow:auto;height:700px;" id="ShipmentDetailsTable">
                        <thead>
                            <tr>
                                <th>Buyer Name</th>
                                <th>Factory Name</th>
                                <th>Style No</th>
                                <th>Style Desc.</th>
                                <th>Po No</th>
                                <th>Order Quantity</th>
                                <th>Remarks</th>
                                <th>Total Shipment</th>
                                <th>Shipped Date</th>
                                <th>Balance Ship Qty</th>
                                <th>TotalAgreedCM</th>
                                <th>TotalFob</th>
                                <th>TotalShippedValue</th>
                                <th>TotalShippedAgreedCM</th>
                                <th>JobNo</th>
                                <th>ContractNo</th>
                                <th>UDNo</th>
                                <th>UDDate</th>
                                <th>InvoiceNo</th>
                                <th>InvoiceFOB</th>
                                <th>InvoiceDate</th>
                                <th>InvoiceValue</th>
                                <th>BL</th>
                                <th>B_LDate</th>
                                <th>EXP</th>
                                <th>EXPDate</th>
                                <th>BankForwardingNo</th>
                                <th>BankForwardingDate</th>
                                <th>RealizationDate</th>
                                <th>TotalRealizationValue</th>
                                <th>OnBoardDate</th>
                                <th>Courier</th>
                                <th>PaymentReceiveDate</th>
                                <th>ShippingBill</th>
                                <th>Shipping Bill Date</th>
                                <th>PortOfLoading</th>
                                <th>FinalDestination</th>
                                <th>CountryName</th>
                                <th>TotalSewing</th>
                                <th>TotalFinishing</th>

                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>@item.BuyerName</td>
                                    <td>@item.FactoryName</td>
                                    <td>@item.StyleNo</td>
                                    <td>@item.StyleDescription</td>
                                    <td>@item.PoNo</td>
                                    <td>@item.OrderQuantity</td>
                                    <td>@item.Remarks</td>
                                    <td>@item.TotalShipMent</td>
                                    <td>@item.ShippedDate</td>
                                    <td>@item.BalanceShipQty</td>
                                    <td>@item.TotalAgreedCM</td>
                                    <td>@item.TotalFob</td>
                                    <td>@item.TotalShippedValue</td>
                                    <td>@item.TotalShippedAgreedCM</td>
                                    <td>@item.JobNo</td>
                                    <td>@item.ContractNo</td>
                                    <td>@item.UDNo</td>
                                    <td>@item.UDDate</td>
                                    <td>@item.InvoiceNo</td>
                                    <td>@item.InvoiceFOB</td>
                                    <td>@item.InvoiceDate</td>
                                    <td>@item.InvoiceValue</td>
                                    <td>@item.BL</td>
                                    <td>@item.B_LDate</td>
                                    <td>@item.EXP</td>
                                    <td>@item.EXPDate</td>
                                    <td>@item.BankForwardingNo</td>
                                    <td>@item.BankForwardingDate</td>
                                    <td>@item.RealizationDate</td>
                                    <td>@item.TotalRealizationValue</td>
                                    <td>@item.OnBoardDate</td>
                                    <td>@item.Courier</td>
                                    <td>@item.PaymentReceiveDate</td>
                                    <td>@item.ShippingBill</td>
                                    <td>@item.ShippingBillDate</td>
                                    <td>@item.PortOfLoading</td>
                                    <td>@item.FinalDestination</td>
                                    <td>@item.CountryName</td>
                                    <td>@item.TotalSewing</td>
                                    <td>@item.TotalFinishing</td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>
<script type="text/javascript">
    $(document).ready(function () {

        $(".download").click(function () {
            //alasql('SELECT AccountNo, BudgetAmount INTO XLSX("' + new Date().toLocaleDateString() + ' BudgetData.xlsx",{sheetid:"Data", headers:true}) FROM HTML("#budgetTable",{headers:true})');
            alasql('SELECT * INTO XLSX("' + new Date().toLocaleDateString() + ' ShipmentDetails(WIP).xlsx",{headers:true}) \
                    FROM HTML("#ShipmentDetailsTable",{headers:true})')
        });

        });

</script>