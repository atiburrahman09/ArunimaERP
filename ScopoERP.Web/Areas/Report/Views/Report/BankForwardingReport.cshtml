@model ScopoERP.Reports.ViewModel.ReportFilteringViewModel

@{
    ViewBag.Title = "Bank Forwarding Report";
}

<div class="row">
    <div class="col-md-3"></div>
    <div class="col-md-6">
        @using (Html.BeginForm("BankForwardingReport", "Report", FormMethod.Post, new { @class = "form-horizontal" }))
        {
            <div class="card">
                <div class="card-body">
                    @Html.ValidationSummary(true)

                    <div class="form-group row">
                        <label class="col-md-4">Bank Forwarding No</label>
                        <div class="col-md-8">
                            @Html.DropDownListFor(model => model.BankForwardingID, ViewBag.BankForwardingList as SelectList, "", new { @class = "form-control select2" })
                            @Html.ValidationMessageFor(model => model.BankForwardingID)
                        </div>
                    </div>

                    <div class="form-group row">
                        <div class="col-md-4"></div>
                        <div class="col-md-4">
                            <input name="Decision" type="radio" id="Decision_1" value="1" />
                            <label for="Decision_1">ASWL</label>
                            @Html.ValidationMessageFor(model => model.Decision)
                        </div>
                        <div class="col-md-4">
                            <input name="Decision" type="radio" id="Decision_2" value="2" />
                            <label for="Decision_2">DMC</label>
                            @Html.ValidationMessageFor(model => model.Decision)
                        </div>
                    </div>

                    <div class="form-group row">
                        <div class="col-md-4"></div>
                        <div class="col-md-4">
                            <input name="ShipmentMode" type="radio" id="ShipmentMode_1" value="1" />
                            <label for="ShipmentMode_1">Sea</label>
                            @Html.ValidationMessageFor(model => model.ShipmentMode)
                        </div>
                        <div class="col-md-4">
                            <input name="ShipmentMode" type="radio" id="ShipmentMode_2" value="2" />
                            <label for="ShipmentMode_2">Air</label>
                            @Html.ValidationMessageFor(model => model.ShipmentMode)
                        </div>
                    </div>
                </div>
                <div class="card-footer">
                    <div class="pull-right">
                        <button class="btn btn-dark" type="button"><i class="fa fa-close "></i> Reset</button>
                        <button class="btn btn-success" type="submit"><i class="fa fa-save "></i> Preview</button>
                    </div>
                </div>
            </div>
        }
    </div>
</div>