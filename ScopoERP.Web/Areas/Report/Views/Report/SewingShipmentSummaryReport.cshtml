@model ScopoERP.Reports.ViewModel.ReportFilteringViewModel

@{
    ViewBag.Title = "Sewing Shipment Summary Report";
}

<div class="box box-solid">
    <header class="box-header with-border">
        <h3 class="box-title"> Search Criteria</h3>
    </header>
    <div class="box-body">
        <div class="col-md-offset-3 col-sm-6">

            @using (Html.BeginForm("SewingShipmentSummaryReport", "Report", FormMethod.Post, new { @class = "form-horizontal" }))
            {
                @Html.ValidationSummary(true)

                <div class="form-group">
                    <label class="col-lg-4">Floor</label>
                    <div class="col-lg-8">
                        @Html.DropDownListFor(model => model.Floor, ViewBag.floorList as SelectList, "", new { @class = "form-control" })
                        @Html.ValidationMessageFor(model => model.Floor)
                    </div>
                </div>
                <div class="form-group">
                    <label class="col-lg-4">Buyer</label>
                    <div class="col-lg-8">
                        @Html.DropDownListFor(model => model.BuyerID, ViewBag.buyerList as SelectList, "", new { @class = "form-control" })
                        @Html.ValidationMessageFor(model => model.BuyerID)
                    </div>
                </div>
                <div class="form-group">
                    <label class="col-lg-4">From Date</label>
                    <div class="col-lg-8">
                        @Html.TextBoxFor(model => model.FromDate, new { @class = "form-control datepicker" })
                    </div>
                </div>
                <div class="form-group">
                    <label class="col-lg-4">To Date</label>
                    <div class="col-lg-8">
                        @Html.TextBoxFor(model => model.ToDate, new { @class = "form-control datepicker" })
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-lg-offset-8 col-lg-2">
                        <input type="reset" class="btn btn-block btn-default" />
                    </div>
                    <div class="col-lg-2">
                        <input type="submit" class="btn btn-block btn-primary" value="Preview" />
                    </div>
                </div>
            }
        </div>
        </div>
    </div>
