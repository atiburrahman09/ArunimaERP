@model ScopoERP.Reports.ViewModel.ReportFilteringViewModel
@{
    ViewBag.Title = "ExpenseReport";
}
<div class="row">
    <div class="col-md-3"></div>
    <div class="col-md-6">
        @using (Html.BeginForm("GetExpenseReport", "Report", FormMethod.Post, new { @class = "form-horizontal" }))
        {
            <div class="card">
                <div class="card-body">
                    @Html.ValidationSummary(true)
                    

                    <div class="form-group row">
                        <label class="col-md-4">Reference No</label>
                        <div class="col-md-8">
                            @Html.TextBoxFor(model => model.ReferenceNo, new { @class = "form-control" })
                            @Html.ValidationMessageFor(model => model.ReferenceNo)
                        </div>
                    </div>

                   
                  
                </div>
                <div class="card-footer">
                    <div class="pull-right">
                        <button class="btn btn-dark" type="button"><i class="fa fa-close "></i> Reset</button>
                        <button class="btn btn-success" type="submit"><i class="fa fa-save "></i> Preview</button>
                    </div>
                </div>
            </div>
        }
    </div>
</div>

