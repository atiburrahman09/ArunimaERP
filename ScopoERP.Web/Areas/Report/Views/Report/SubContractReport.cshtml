@model ScopoERP.Reports.ViewModel.ReportFilteringViewModel

@{
    ViewBag.Title = "SubContract Report";
}


<div class="row">
    <div class="col-md-12">
        <div class="card">
            <div class="card-header no-border">
                <h3>Sub Contract Report</h3>
            </div>
            <div class="card-body">
                <div class="">
                    @using (Html.BeginForm("SubContractReport", "Report", FormMethod.Post, new { @class = "form-horizontal" }))
            {
                        @Html.ValidationSummary(true)

                        <div class="form-group row">
                            <label class="col-lg-4">From Date</label>
                            <div class="col-lg-8">
                                @Html.TextBoxFor(model => model.FromDate, new { @class = "form-control datepicker", autocomplete = "off" })
                            </div>
                        </div>
                        <div class="form-group row">
                            <label class="col-lg-4">To Date</label>
                            <div class="col-lg-8">
                                @Html.TextBoxFor(model => model.ToDate, new { @class = "form-control datepicker", autocomplete = "off" })
                            </div>
                        </div>
                        <hr />
                        <div class="form-group row">
                            <div class="col-lg-4">
                                <input type="reset" class="btn btn-block btn-default" />
                            </div>
                            <div class="col-lg-4">
                                <input type="submit" class="btn btn-block btn-primary" value="Preview" />
                            </div>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>

