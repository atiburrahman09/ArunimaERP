@model ScopoERP.Reports.ViewModel.ReportFilteringViewModel

@{
    ViewBag.Title = "Realization Report";
}

<div class="row">
    <div class="col-md-3"></div>

    <div class="col-md-6">
        @using (Html.BeginForm("RealizationReport", "Report", FormMethod.Post, new { @class = "form-horizontal" }))
        {
            <div class="card">
                <div class="card-body">
                    @Html.ValidationSummary(true)

                    <div class="form-group row">
                        <label class="col-lg-4">From Date</label>
                        <div class="col-lg-8">
                            @Html.TextBoxFor(model => model.FromDate, new { @class = "form-control datepicker" })
                        </div>
                    </div>

                    <div class="form-group row">
                        <label class="col-lg-4">To Date</label>
                        <div class="col-lg-8">
                            @Html.TextBoxFor(model => model.ToDate, new { @class = "form-control datepicker" })
                        </div>
                    </div>

                    <div class="form-group row">
                        <div class="col-md-4"></div>
                        <div class="col-md-4">
                            <input name="Decision" type="radio" id="Decision_1" value="1" />
                            <label for="Decision_1">ASWL</label>
                            @Html.ValidationMessageFor(model => model.Decision)
                        </div>
                        <div class="col-md-4">
                            <input name="Decision" type="radio" id="Decision_2" value="2" />
                            <label for="Decision_2">DMC</label>
                            @Html.ValidationMessageFor(model => model.Decision)
                        </div>
                    </div>

                    <div class="form-group row">
                        <div class="col-md-4"></div>
                        <div class="col-md-8">
                            <input type="checkbox" id="checkbox_1" name="InBDT">
                            <label for="checkbox_1">Show Amount in BDT</label>
                        </div>
                    </div>
                </div>
                <div class="card-footer">
                    <div class="form-group row">
                        <div class="col-lg-3">
                            <input type="reset" class="btn btn-block btn-dark" />
                        </div>
                        <div class="col-lg-3">
                            <input type="submit" class="btn btn-block btn-success" value="Preview" />
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
</div>