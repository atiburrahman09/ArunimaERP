@{
ViewBag.Title = "Dashboard";
}

<div class="row" ng-app="scopoApp" ng-controller="dashboardCtrl" ng-init="init()">
    <div class="col-12">
        <div class="row">
            <!-- Column -->
            <div class="col-lg-3 col-md-6">
                <div class="card">
                    <div class="card-body">
                        <div class="d-flex flex-row">
                            <div class="round round-lg align-self-center round-info"><i class="ti-wallet"></i></div>
                            <div class="m-l-10 align-self-center">
                                <h3 class="m-b-0 font-light">{{dashboard.TotalContract}}</h3>
                                <h5 class="text-muted m-b-0">Total Contract</h5>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <!-- Column -->
            <!-- Column -->
            <div class="col-lg-3 col-md-6">
                <div class="card">
                    <div class="card-body">
                        <div class="d-flex flex-row">
                            <div class="round round-lg align-self-center round-warning"><i class="mdi mdi-cellphone-link"></i></div>
                            <div class="m-l-10 align-self-center">
                                <h3 class="m-b-0 font-lgiht">{{dashboard.TotalOrder}}</h3>
                                <h5 class="text-muted m-b-0">Total Order</h5>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <!-- Column -->
            <!-- Column -->
            <div class="col-lg-3 col-md-6">
                <div class="card">
                    <div class="card-body">
                        <div class="d-flex flex-row">
                            <div class="round round-lg align-self-center round-primary"><i class="mdi mdi-cart-outline"></i></div>
                            <div class="m-l-10 align-self-center">
                                <h3 class="m-b-0 font-lgiht">{{dashboard.CurrentShipment}}</h3>
                                <h5 class="text-muted m-b-0">This Month Shipment</h5>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <!-- Column -->
            <!-- Column -->
            <div class="col-lg-3 col-md-6">
                <div class="card">
                    <div class="card-body">
                        <div class="d-flex flex-row">
                            <div class="round round-lg align-self-center round-danger"><i class="mdi mdi-bullseye"></i></div>
                            <div class="m-l-10 align-self-center">
                                <h3 class="m-b-0 font-lgiht">{{dashboard.UpcomingShipment}}</h3>
                                <h5 class="text-muted m-b-0">Upcoming Shipment</h5>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <!-- Column -->
        </div>
    </div>

    <div class="col-sm-12">
        <div class="row">
            <div class="col">
                <div class="card">
                    <div class="card-body">
                        <canvas id="_shipmentQty" width="100" height="50"></canvas>
                    </div>
                </div>
            </div>

            <div class="col">
                <div class="card">
                    <div class="card-body">
                        <canvas id="order_shiptment_report" width="100" height="50"></canvas>
                    </div>
                </div>
            </div>
        </div>
       
    </div>
</div>
