@model IEnumerable<ScopoERP.UserManagement.ViewModel.UserViewModel>
@{
    ViewBag.Title = "Users";
    Layout = "~/Views/Shared/_NewLayout.cshtml";
}


<div class="row">
    <div class="col">
        <div class="card">
            <div class="card-body">
                <div class="row margin-bottom">
                    <div class="col-sm">
                        <h3>User Management</h3>
                    </div>
                    <dvi class="col-sm-2">
                        <a href="/Account/CreateUser" class="btn btn-primary pull-right">New User</a>
                    </dvi>
                </div>

                <div class="table-responsive">
                    <table class="table table-striped table-bordered">
                        <thead>
                            <tr>
                                <th>
                                    User Name
                                </th>
                                <th>
                                    Roles
                                </th>
                                <th>
                                    Account
                                </th>
                                <th>

                                </th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                            <tr>
                                <td>
                                    @Html.DisplayFor(x => item.UserName)
                                </td>
                                <td>
                                    @item.RolesToString()
                                </td>
                                <td>
                                    @item.AccountName
                                </td>
                                <td>
                                    @Html.ActionLink("Edit", "EditUser", new { userName = item.UserName })
                                </td>
                            </tr>
                            }
                        </tbody>
                    </table>
                </div>

            </div>
        </div>
    </div>
</div>



