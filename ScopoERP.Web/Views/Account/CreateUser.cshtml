@model ScopoERP.Models.RegisterModel
@{
    ViewBag.Title = "Register";
    //Layout = "~/Views/Shared/_LogInLayoutPage.cshtml";
}

@*<script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>*@

<div class="row">

    <div class="col">
        <div class="card">
            <div class="card-body">
                <h3 class="">Create User</h3>

                @using (Html.BeginForm("CreateUser", "Account", FormMethod.Post, new { @class = "form-signin" }))
                {

                    <div class="form-group row">
                        @Html.LabelFor(m => m.UserName, "User Name", new { @class = "col-sm-2" })
                        <div class="col">
                            @Html.TextBoxFor(m => m.UserName, new { @class = "form-control", @placeholder = "Username", @autofocus = "", @required = "" })
                        </div>
                    </div>

                    <div class="form-group row">
                        @Html.LabelFor(m => m.Email, "Email", new { @class = "col-sm-2" })
                        <div class="col">
                            @Html.TextBoxFor(m => m.Email, new { @class = "form-control", @placeholder = "Email", @autofocus = "", @required = "" })
                        </div>
                    </div>

                    <div class="form-group row">
                        @Html.LabelFor(m => m.Password, "Password", new { @class = "col-sm-2" })
                        <div class="col">
                            @Html.PasswordFor(m => m.Password, new { @class = "form-control", @placeholder = "Password", @required = "" })
                        </div>
                    </div>

                    <div class="form-group row">
                        @Html.LabelFor(m => m.ConfirmPassword, "Password", new { @class = "col-sm-2" })
                        <div class="col">
                            @Html.PasswordFor(m => m.ConfirmPassword, new { @class = "form-control", @placeholder = "Confirm Password", @required = "" })
                        </div>
                    </div>

                    <div class="form-group row">
                        @Html.LabelFor(m => m.Roles, "Roles", new { @class = "col-sm-2" })
                        <div class="col">
                            @Html.ListBoxFor(x => x.Roles, ViewBag.Roles as MultiSelectList, new { @class = "form-control select2", @type = "text" })
                        </div>

                    </div>

                    <div class="form-group row">
                        @Html.LabelFor(m => m.AccountId, "Account", new { @class = "col-sm-2" })
                        <div class="col">
                            @Html.DropDownListFor(m => m.AccountId, ViewBag.Accounts as SelectList, "Select User Account", new { @class = "form-control", @readonly = "readonly" })
                        </div>
                    </div>

                    <div class="login-wrap">
                        <div class="user-login-info">

                            @Html.ValidationSummary(false)

                        </div>


                    </div>
                    <div class="form-group pull-right">
                        <a class="btn btn-warning" href="/Account/Users">Cancel</a>
                        <button class="btn btn-success" type="submit">Create</button>
                    </div>
                }

            </div>
        </div>
    </div>
</div>