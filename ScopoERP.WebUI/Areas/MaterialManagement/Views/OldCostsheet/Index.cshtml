@{
    ViewBag.Title = "Costsheet";
}

<div class="col-sm-12" ng-app="costsheet.controllers" ng-controller="costsheetController" ng-init="init()">
    <toaster-container toaster-options="{ 'close-button':true}"></toaster-container>
    <section class="panel">
        <header class="panel-heading"> Search Criteria </header>
        <div class="panel-body">
            <div>
                <form class="form-inline" role="form">
                    <div class="form-group">
                        <label class="control-label" for="cboStyle">Style</label>
                        <div class="col-md-2">
                            <select ui-select2="styleOptions" ng-model="searchCriteria.styleID" ng-change="onCboStyleChange()" class="" style="width:200px;">
                                <option value="">Select Style</option>
                                <option ng-repeat="c in searchCriteria.styleDropDown" value="{{ c.Value }}">{{ c.Text }}</option>
                            </select>
                        </div>
                        @*@Html.DropDownList("cboStyle", ViewBag.Style as SelectList, "", new { @class = "form-control", @ng_change = "onCboStyleChange()", @ng_model = "searchCriteria.styleID", @chosen="" })*@
                    </div>
                    <div class="form-group">
                        <label class="control-label" for="cboCostsheetNo">Costsheet No</label>
                        <div class="col-md-2">
                            <select ui-select2 data-placeholder="Select Costsheets" ng-model="searchCriteria.costsheetNo" ng-change="onCboCosheetNoChange()" class="" style="width:200px;">
                                <option value="">Select Costsheet</option>
                                <option ng-repeat="c in costsheet.dropDown" value="{{ c }}">{{ c }}</option>
                            </select>
                        </div>
                        @*<select chosen class="form-control" ng-options="item for item in costsheet.dropDown" ng-model="searchCriteria.costsheetNo" ng-change="onCboCosheetNoChange()" style="width:200px;">
                                <option></option>
                            </select>*@
                    </div>
                </form>
            </div>
        </div>
    </section>

    <section class="panel">
        <header class="panel-heading"> Costsheet Details </header>
        <div class="panel-body">

            <div class="form-group">
                <div class="costsheetGrid">
                    <div class="gridStyle" ng-grid="gridOptions">
                    </div>
                </div>
            </div>

            <div class="form-group">
                <div class="col-md-offset-6 col-md-2">
                    <a class="btn btn-block btn-success" ng-click="addAnotherRow()" href="javascript:void(0);">Add Another Row</a>
                </div>
                <div class="col-md-4">
                    <input type="button" class="btn btn-block btn-primary" ng-click="save()" value="Save" />
                </div>
            </div>
        </div>
    </section>
</div>
@Html.Partial("_angular")
<script src="~/Scripts/app/services/costsheet.services.js"></script>
<script src="~/Scripts/app/filters/costsheet.filters.js"></script>
<script src="~/Scripts/app/controllers/costsheet.controllers.js"></script>
