@model ScopoERP.MaterialManagement.ViewModel.ItemViewModel
@{
    ViewBag.Title = "Create Item";
}

<div class="col-sm-offset-3 col-sm-6">
    <section class="panel">
        <header class="panel-heading">
            Create New Item
        </header>
        <div class="panel-body">

            @using (Html.BeginForm("Create", "Item", FormMethod.Post, new { @class = "form-horizontal" }))
            {
                @Html.ValidationSummary(true)

                <div class="form-group">
                    <label class="col-lg-4 col-sm-4 control-label">Item Category</label>
                    <div class="col-lg-8">
                        @Html.DropDownListFor(model => model.ItemCategoryID, ViewBag.ItemCategory as SelectList, "", new { @class = "form-control" })
                        @Html.ValidationMessageFor(model => model.ItemCategoryID)
                    </div>
                </div>

                <div class="form-group">
                    <label class="col-lg-4 col-sm-4 control-label">Item Code</label>
                    <div class="col-lg-8">
                        @Html.TextBoxFor(model => model.ItemCode, new { @class = "form-control" })
                        @Html.ValidationMessageFor(model => model.ItemCode)
                    </div>
                </div>

                <div class="form-group">
                    <label class="col-lg-4 col-sm-4 control-label">Item Description</label>
                    <div class="col-lg-8">
                        @Html.TextBoxFor(model => model.ItemDescription, new { @class = "form-control" })
                        @Html.ValidationMessageFor(model => model.ItemDescription)
                    </div>
                </div>

                <div class="form-group">
                    <div class="col-lg-offset-4 col-lg-4">
                        @Html.ActionLink("Cancel", "Index", "Item", null, new { @class = "btn btn-block btn-default" })
                    </div>
                    <div class="col-lg-4">
                        <input type="submit" class="btn btn-block btn-primary" value="Save" />
                    </div>
                </div>
            }

        </div>
    </section>
</div>
