@model ScopoERP.Stackholder.ViewModel.BuyerViewModel

@{
    ViewBag.Title = "Create Buyer";
}

<div class="col-sm-offset-3 col-sm-6">
    <section class="panel">
        <header class="panel-heading">
            Create New Buyer
        </header>
        <div class="panel-body">

            @using (Html.BeginForm("Create", "Buyer", FormMethod.Post, new { @class = "form-horizontal" }))
            {
                @Html.ValidationSummary(true)

                <div class="form-group">
                    <label class="col-lg-4 col-sm-4 control-label">Buyer Name</label>
                    <div class="col-lg-8">
                        @Html.TextBoxFor(model => model.BuyerName, new { @class = "form-control" })
                        @Html.ValidationMessageFor(model => model.BuyerName)
                    </div>
                </div>

                <div class="form-group">
                    <div class="col-lg-offset-4 col-lg-4">
                        @Html.ActionLink("Cancel", "Index", "Buyer", null, new { @class = "btn btn-block btn-default" })
                    </div>
                    <div class="col-lg-4">
                        <input type="submit" class="btn btn-block btn-primary" value="Save" />
                    </div>
                </div>
            }

        </div>
    </section>
</div>
