@{
    ViewBag.Title = "Supplier";
}

<div class="col-sm-12">

    <p>
        @Html.ActionLink("Create New Supplier", "Create", "Supplier", null, new { @class = "btn btn-lg btn-primary" })
    </p>

    @using Telerik.Web.Mvc.UI

    @( Html.Telerik().Grid<ScopoERP.Stackholder.ViewModel.SupplierViewModel>()
        .Name("SupplierGrid")
        .DataKeys(dataKeys => dataKeys.Add(k => k.SupplierID))
        .DataBinding(dataBinding => dataBinding.Ajax().Select("GetAllSupplier", "Supplier"))
        .Columns(columns =>
        {
            columns.Bound(c => c.SupplierID).ClientTemplate(
                Html.ActionLink("Edit", "Edit", new { id = "<#= SupplierID #>" }, new { @class = "t-button" }).ToHtmlString()
            )
            .Width(50).Title("").Filterable(false);

            columns.Bound(c => c.SupplierName).Width(150);
            columns.Bound(c => c.Email).Width(150);
            columns.Bound(c => c.ContactNumber).Width(150);
            columns.Bound(c => c.Address).Width(150);
        })
        .ColumnContextMenu()
        .Resizable(r => r.Columns(true))
        .Reorderable(r => r.Columns(true))
        .KeyboardNavigation()
        .Filterable()
        .Pageable(p => p.PageSize(10))
        .Selectable()
        .Sortable()
        //.HtmlAttributes(new { @style = "width : 90%" })
    )

</div>