@model ScopoERP.Production.ViewModel.MachineCategoryViewModel
@{
    ViewBag.Title = "Update MachineCategory";
}

<div class="col-sm-offset-3 col-sm-6">
    <section class="panel">
        <header class="panel-heading">
            Create New Machine Category
        </header>
        <div class="panel-body">

            @using (Html.BeginForm("Edit", "MachineCategory", FormMethod.Post, new { @class = "form-horizontal" }))
            {
                @Html.ValidationSummary(true)
                @Html.HiddenFor(model => model.MachineCategoryID)
                
                <div class="form-group">
                    <label class="col-lg-4 col-sm-4 control-label">Parent Category</label>
                    <div class="col-lg-8">
                        @Html.DropDownListFor(model => model.ParentCategoryID, ViewBag.ParentCategory as SelectList, "", new { @class = "form-control" })
                        @Html.ValidationMessageFor(model => model.Name)
                    </div>
                </div>

                <div class="form-group">
                    <label class="col-lg-4 col-sm-4 control-label">Category Name</label>
                    <div class="col-lg-8">
                        @Html.TextBoxFor(model => model.Name, new { @class = "form-control" })
                        @Html.ValidationMessageFor(model => model.Name)
                    </div>
                </div>

                <div class="form-group">
                    <div class="col-lg-offset-4 col-lg-4">
                        @Html.ActionLink("Cancel", "Index", "MachineCategory", null, new { @class = "btn btn-block btn-default" })
                    </div>
                    <div class="col-lg-4">
                        <input type="submit" class="btn btn-block btn-primary" value="Update" />
                    </div>
                </div>
            }

        </div>
    </section>
</div>
