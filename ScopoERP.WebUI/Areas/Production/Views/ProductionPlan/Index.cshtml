                    <option value="9">Oct</option>
                    <option value="10">Nov</option>
                    <option value="11">Dec</option>
                </select>
            </div>

            <label class="control-label col-md-1" for="txtYear">Year</label>
            <div class="col-md-2">
                <input type="text" id="txtYear" class="form-control" />
            </div>*@

                        <div class="col-md-2">
                            <input type="submit" id="btnSubmitSearch" value="Search" class="btn btn-primary btn-block" />
                        </div>
                    </div>
            </div>
        </div>
    </section>

    <section class="panel">
        <header class="panel-heading"> Production Plan </header>
        <div class="panel-body">
            <div class="col-md-12" id="productionPlanCalendar"></div>
            <label class="control-label col-md-12 productionHourLabel" for="cboStyle">Production Hour: 10 hours per day</label>
        </div>
    </section>
</div>

<script src="~/Scripts/productionPlan/fullcalendar.js"></script>
<script src="~/Scripts/productionPlan/date.format.js"></script>
<script src="~/Scripts/contextMenu/context.js"></script>
