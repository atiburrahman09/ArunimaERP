@model ScopoERP.HR.ViewModel.HolidayViewModel

@{
    ViewBag.Title = "Update Holiday";
}

<div class="col-sm-offset-3 col-sm-6">
    <section class="panel">
        <header class="panel-heading">
            Update Holiday
        </header>
        <div class="panel-body">

            @using (Html.BeginForm("Edit", "Holiday", FormMethod.Post, new { @class = "form-horizontal" }))
            {
                @Html.ValidationSummary(true)
                @Html.HiddenFor(model => model.HolidayID)
                
                <div class="form-group">
                    <label class="col-lg-4 col-sm-4 control-label">From Date</label>
                    <div class="col-lg-8">
                        @Html.TextBoxFor(model => model.FromDate, new { @class = "form-control default-date-picker" })
                        @Html.ValidationMessageFor(model => model.FromDate)
                    </div>
                </div>

                <div class="form-group">
                    <label class="col-lg-4 col-sm-4 control-label">To Date</label>
                    <div class="col-lg-8">
                        @Html.TextBoxFor(model => model.ToDate, new { @class = "form-control default-date-picker" })
                        @Html.ValidationMessageFor(model => model.ToDate)
                    </div>
                </div>

                <div class="form-group">
                    <label class="col-lg-4 col-sm-4 control-label">Reason</label>
                    <div class="col-lg-8">
                        @Html.TextBoxFor(model => model.Reason, new { @class = "form-control" })
                        @Html.ValidationMessageFor(model => model.Reason)
                    </div>
                </div>

                <div class="form-group">
                    <div class="col-lg-offset-4 col-lg-4">
                        @Html.ActionLink("Cancel", "Index", "Holiday", null, new { @class = "btn btn-block btn-default" })
                    </div>
                    <div class="col-lg-4">
                        <input type="submit" class="btn btn-block btn-primary" value="Update" />
                    </div>
                </div>
            }

        </div>
    </section>
</div>
