@model ScopoERP.Reports.ViewModel.ReportFilteringViewModel

@{
    ViewBag.Title = "Sewing Shipment Summary Report";
}

<div class="col-sm-offset-2 col-sm-8">
    <section class="panel">
        <header class="panel-heading">
            Search Criteria
        </header>
        <div class="panel-body">

            @using (Html.BeginForm("SewingShipmentSummaryReport", "Report", FormMethod.Post, new { @class = "form-horizontal" }))
            {
                @Html.ValidationSummary(true)

                <div class="form-group">
                    <label class="col-lg-3 control-label">Floor</label>
                    <div class="col-lg-9">
                        @Html.DropDownListFor(model => model.Floor, ViewBag.floorList as SelectList, "", new { @class = "combo-box" })
                        @Html.ValidationMessageFor(model => model.Floor)
                    </div>
                </div>

                <div class="form-group">
                    <label class="col-lg-3 control-label">Buyer</label>
                    <div class="col-lg-9">
                        @Html.DropDownListFor(model => model.BuyerID, ViewBag.buyerList as SelectList, "", new { @class = "combo-box" })
                        @Html.ValidationMessageFor(model => model.BuyerID)
                    </div>
                </div>

                <div class="form-group">
                    <label class="col-lg-3 col-sm-3 control-label">From Date</label>
                    <div class="col-lg-3">
                        @Html.TextBoxFor(model => model.FromDate, new { @class = "form-control default-date-picker" })
                    </div>

                    <label class="col-lg-3 col-sm-3 control-label">To Date</label>
                    <div class="col-lg-3">
                        @Html.TextBoxFor(model => model.ToDate, new { @class = "form-control default-date-picker" })
                    </div>
                </div>

                <hr />

                <div class="form-group">
                    <div class="col-lg-offset-6 col-lg-3">
                        <input type="reset" class="btn btn-block btn-default" />
                    </div>
                    <div class="col-lg-3">
                        <input type="submit" class="btn btn-block btn-primary" value="Preview" />
                    </div>
                </div>
            }
        </div>
    </section>
</div>
