@model ScopoERP.Reports.ViewModel.ReportFilteringViewModel

@{
    ViewBag.Title = "Accessories & Others Report";
}

<div class="col-sm-offset-3 col-sm-6">
    <section class="panel">
        <header class="panel-heading">
            Search Criteria
        </header>
        <div class="panel-body">

            @using (Html.BeginForm("AdvancedCMReport", "Report", FormMethod.Post, new { @class = "form-horizontal" }))
            {
                @Html.ValidationSummary(true)

                <div class="form-group">
                    <label class="col-xs-4 control-label">Year</label>
                    <div class="col-lg-6">
                        @Html.DropDownListFor(model => model.Year, ViewBag.Years as SelectList, "", new { @class = "combo-box" })
                        @Html.ValidationMessageFor(model => model.Year)
                    </div>
                </div>

                <hr />

                <div class="form-group">
                    <div class="col-lg-offset-4 col-lg-3">
                        <input type="reset" class="btn btn-block btn-default" />
                    </div>
                    <div class="col-lg-3">
                        <input type="submit" class="btn btn-block btn-primary" value="Preview" />
                    </div>
                </div>
            }

        </div>
    </section>
</div>

