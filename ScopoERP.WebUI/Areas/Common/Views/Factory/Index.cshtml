@{
    ViewBag.Title = "Factory";
}

<div class="col-sm-12">

    <p>
        @Html.ActionLink("Create New Factory", "Create", "Factory", null, new { @class = "btn btn-lg btn-primary" })
    </p>

    @using Telerik.Web.Mvc.UI

    @( Html.Telerik().Grid<ScopoERP.Common.ViewModel.FactoryViewModel>()
        .Name("FactoryGrid")
        .DataKeys(dataKeys => dataKeys.Add(k => k.FactoryID))
        .DataBinding(dataBinding => dataBinding.Ajax().Select("GetAllFactory", "Factory"))
        .Columns(columns =>
        {
            columns.Bound(c => c.FactoryID).ClientTemplate(
                Html.ActionLink("Edit", "Edit", new { id = "<#= FactoryID #>" }, new { @class = "t-button" }).ToHtmlString()
            )
            .Width(50).Title("").Filterable(false);

            columns.Bound(c => c.FactoryName).Width(750);
        })
        .ColumnContextMenu()
        .Resizable(r => r.Columns(true))
        .Reorderable(r => r.Columns(true))
        .KeyboardNavigation()
        .Filterable()
        .Pageable(p => p.PageSize(10))
        .Selectable()
        .Sortable()
        //.HtmlAttributes(new { @style = "width : 90%" })
    )

</div>