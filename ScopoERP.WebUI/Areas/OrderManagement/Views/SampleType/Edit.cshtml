@model ScopoERP.OrderManagement.ViewModel.SampleTypeViewModel

@{
    ViewBag.Title = "Update New Sample Type";
}

<div class="col-sm-offset-3 col-sm-6">
    <section class="panel">
        <header class="panel-heading">
            Update Sample Type
        </header>
        <div class="panel-body">

            @using (Html.BeginForm("Edit", "SampleType", FormMethod.Post, new { @class = "form-horizontal" }))
            {
                @Html.ValidationSummary(true)
                @Html.HiddenFor(model => model.SampleTypeID)

                <div class="form-group">
                    <label class="col-lg-4 col-sm-4 control-label">Sample Type Name</label>
                    <div class="col-lg-8">
                        @Html.TextBoxFor(model => model.SampleTypeName, new { @class = "form-control" })
                        @Html.ValidationMessageFor(model => model.SampleTypeName)
                    </div>
                </div>

                <div class="form-group">
                    <div class="col-lg-offset-4 col-lg-4">
                        @Html.ActionLink("Cancel", "Index", "SampleType", null, new { @class = "btn btn-block btn-default" })
                    </div>
                    <div class="col-lg-4">
                        <input type="submit" class="btn btn-block btn-primary" value="Save" />
                    </div>
                </div>
            }

        </div>
    </section>
</div>
