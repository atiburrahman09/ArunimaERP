@model ScopoERP.OrderManagement.ViewModel.SplitViewModel
@{
    Layout = null;
}

<div class="col-sm-6">
    <div class="table-responsive">
        <table class="table table-bordered table-striped">
            <thead>
                <tr>
                    <th class="col-sm-1"></th>
                    <th class="col-sm-4">PO No</th>
                    <th class="col-sm-3">Order Quantity</th>
                    <th class="col-sm-3">Exit Date</th>
                </tr>
            </thead>
            <tbody>
                @for (int i = 0; i < Model.SplitList.Count; i++)
                {
                    <tr>
                        <td>@Html.CheckBoxFor(model => Model.SplitList[i].IsChecked, new { @class = "form-control" })</td>
                        <td>
                            @Html.TextBoxFor(model => Model.SplitList[i].PONo, new { @class = "form-control", @readonly = true })
                            @Html.HiddenFor(model => Model.SplitList[i].PurchaseOrderID)
                        </td>
                        <td>
                            @Html.TextBoxFor(model => Model.SplitList[i].OrderQuantity, new { @class = "form-control", @readonly = true })
                        </td>
                        <td>
                            @Html.TextBoxFor(model => Model.SplitList[i].ExitDate, Model.SplitList[i].ExitDate.ToString("dd-MMM-yyyy"), new { @class = "form-control", @readonly = true })
                        </td>
                    </tr>
                }
            </tbody>

        </table>

    </div>

    <div class="form-group">
        <div class="col-xs-offset-8 col-xs-4">
            <input type="submit" class="btn btn-block btn-primary" value="Save" />
        </div>
    </div>
</div>