@model ScopoERP.Finance.ViewModel.RealizationAccountViewModel

@{
    ViewBag.Title = "Update Realization Account";
}

<div class="col-sm-offset-3 col-sm-6">
    <section class="panel">
        <header class="panel-heading">
            Create New RealizationAccount
        </header>
        <div class="panel-body">

            @using (Html.BeginForm("Edit", "RealizationAccount", FormMethod.Post, new { @class = "form-horizontal" }))
            {
                @Html.ValidationSummary(true)
                @Html.HiddenFor(model => model.RealizationAccountID)

                <div class="form-group">
                    <label class="col-lg-4 col-sm-4 control-label">Account No</label>
                    <div class="col-lg-8">
                        @Html.TextBoxFor(model => model.RealizationAccountNo, new { @class = "form-control" })
                        @Html.ValidationMessageFor(model => model.RealizationAccountNo)
                    </div>
                </div>

                <div class="form-group">
                    <label class="col-lg-4 col-sm-4 control-label">Account Name</label>
                    <div class="col-lg-8">
                        @Html.TextBoxFor(model => model.RealizationAccountName, new { @class = "form-control" })
                        @Html.ValidationMessageFor(model => model.RealizationAccountName)
                    </div>
                </div>


                <div class="form-group">
                    <label class="col-lg-4 col-sm-4 control-label">Account Type</label>
                    <div class="col-lg-8">
                        @Html.DropDownListFor(model => model.RealizationAccountType, ViewBag.accountTypeList as SelectList, new { @class = "combo-box" })
                        @Html.ValidationMessageFor(model => model.RealizationAccountType)
                    </div>
                </div>

                <div class="form-group">
                    <div class="col-lg-offset-4 col-lg-4">
                        @Html.ActionLink("Cancel", "Index", "RealizationAccount", null, new { @class = "btn btn-block btn-default" })
                    </div>
                    <div class="col-lg-4">
                        <input type="submit" class="btn btn-block btn-primary" value="Update" />
                    </div>
                </div>
            }

        </div>
    </section>
</div>
